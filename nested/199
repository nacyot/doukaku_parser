<span class="k">import</span> <span class="nn">os</span>
<span class="k">import</span> <span class="nn">socket</span>
<span class="k">from</span> <span class="nn">threading</span> <span class="k">import</span> <span class="n">Thread</span>
<span class="k">import</span> <span class="nn">msvcrt</span>

<span class="k">class</span> <span class="nc">Receiver</span><span class="p">(</span><span class="n">Thread</span><span class="p">):</span>
