            <span class="o">}</span>

            <span class="nd">@Override</span>
            <span class="k">public</span> <span class="n">String</span> <span class="n">next</span><span class="o">()</span> <span class="o">{</span>
                <span class="k">if</span> <span class="o">(</span><span class="n">isIntermission_</span><span class="o">)</span> <span class="o">{</span>
                    <span class="n">isIntermission_</span> <span class="o">=</span> <span class="kc">false</span><span class="o">;</span>
                    <span class="k">return</span> <span class="n">String</span><span class="o">.</span><span class="na">format</span><span class="o">(</span><span class="n">MessageIntermission</span><span class="o">);</span>
                <span class="o">}</span> <span class="k">else</span> <span class="o">{</span>
                    <span class="n">buttle_</span><span class="o">++;</span>
                    <span class="n">String</span> <span class="n">format</span> <span class="o">=</span> <span class="o">(</span><span class="n">buttle_</span> <span class="o">==</span> <span class="n">MAX_BUTTLES</span><span class="o">)?</span> <span class="nl">MessageTemplate2:</span> <span class="n">MessageTemplate1</span><span class="o">;</span>
                    <span class="n">exp_</span> <span class="o">=</span> <span class="n">exp_</span><span class="o">.</span><span class="na">multiply</span><span class="o">(</span><span class="n">BigInteger</span><span class="o">.</span><span class="na">valueOf</span><span class="o">(</span><span class="n">buttle_</span><span class="o">));</span>
                    <span class="n">isIntermission_</span> <span class="o">=</span> <span class="kc">true</span><span class="o">;</span>
                    <span class="k">return</span> <span class="n">String</span><span class="o">.</span><span class="na">format</span><span class="o">(</span><span class="n">format</span><span class="o">,</span>
