22</pre></td><td class="code"><div class="highlight"><pre><span class="k">using</span> <span class="nn">System</span><span class="p">;</span>
<span class="k">using</span> <span class="nn">System.IO</span><span class="p">;</span>

<span class="k">namespace</span> <span class="nn">Doukaku.CS</span>
<span class="k">{</span>
	<span class="k">public</span> <span class="k">class</span> <span class="nc">DelNyoro</span>
	<span class="k">{</span>
		<span class="k">static</span> <span class="k">void</span> <span class="nf">Main</span><span class="p">(</span><span class="kt">string</span><span class="p">[]</span> <span class="n">args</span><span class="p">)</span>
		<span class="k">{</span>
			<span class="k">foreach</span><span class="p">(</span><span class="kt">string</span> <span class="n">dir</span> <span class="k">in</span> <span class="n">args</span><span class="p">)</span>
			<span class="k">{</span>
				<span class="k">if</span> <span class="p">(</span><span class="n">Directory</span><span class="p">.</span><span class="n">Exists</span><span class="p">(</span><span class="n">dir</span><span class="p">))</span>
				<span class="k">{</span>
					<span class="k">foreach</span> <span class="p">(</span><span class="kt">string</span> <span class="n">nyoroFile</span> <span class="k">in</span> <span class="n">Directory</span><span class="p">.</span><span class="n">GetFiles</span><span class="p">(</span><span class="n">dir</span><span class="p">,</span> <span class="s">&quot;*~&quot;</span><span class="p">,</span> <span class="n">SearchOption</span><span class="p">.</span><span class="n">AllDirectories</span><span class="p">))</span>
						<span class="n">File</span><span class="p">.</span><span class="n">Delete</span><span class="p">(</span><span class="n">nyoroFile</span><span class="p">);</span>
				<span class="k">}</span>
				<span class="k">else</span>
					<span class="n">Console</span><span class="p">.</span><span class="n">WriteLine</span><span class="p">(</span><span class="kt">string</span><span class="p">.</span><span class="n">Format</span><span class="p">(</span><span class="s">&quot;Directory %s is not exists.&quot;</span><span class="p">,</span> <span class="n">dir</span><span class="p">));</span>
			<span class="k">}</span>
		<span class="k">}</span>
	<span class="k">}</span>
<span class="k">}</span>
</pre></div>
</td></tr></table>
    </div>
	

  
