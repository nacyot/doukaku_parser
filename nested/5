13</pre></td><td class="code"><div class="highlight"><pre><span class="c">#! /bin/bash</span>

<span class="nb">shopt</span> -s dotglob <span class="c">#for dotfile</span>

<span class="k">function </span>rm_g<span class="o">(){</span>
    <span class="nb">local </span>file <span class="nv">proc_dir</span><span class="o">=</span><span class="nv">$1</span>
    <span class="k">for </span>file in <span class="k">${</span><span class="nv">proc</span><span class="p">_dir</span><span class="k">}</span>/*; <span class="k">do</span>
        <span class="o">[</span> <span class="k">${</span><span class="nv">file</span><span class="p">:(-1):</span><span class="nv">1</span><span class="k">}</span> <span class="o">==</span> <span class="s1">&#39;~&#39;</span> <span class="o">]</span> &amp;&amp; rm <span class="nv">$file</span>
        <span class="o">[</span> -d <span class="nv">$file</span> <span class="o">]</span> &amp;&amp; rm_g <span class="nv">$file</span>
    <span class="k">done</span>
<span class="o">}</span>

rm_g ~/tmp
</pre></div>
</td></tr></table>
    </div>
	

  
