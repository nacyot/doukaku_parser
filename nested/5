  <span class="k">for</span> v <span class="k">in</span> split<span class="p">(</span>globpath<span class="p">(</span>a:<span class="nb">dir</span><span class="p">,</span> <span class="s2">&quot;*~&quot;</span><span class="p">),</span> <span class="c">&quot;\n&quot;)</span>
    <span class="k">call</span> delete<span class="p">(</span>v<span class="p">)</span>
  <span class="k">endfor</span>
endfun
