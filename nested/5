	&nbsp;
	<a href="/web/20081204193701/http://ja.doukaku.org/comment/58/">#58</a>(<script language="JavaScript">print_time(new Date("2007/07/02 08:52 GMT"));</script><noscript>2007/07/02 08:52 GMT</noscript>)
	
	
	
	
	
