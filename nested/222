in := &#39;○○○○
○○○○○○○

○○○○○
&#39;.

out := String new writeStream.
width := 0.
in linesDo: [:line | width := width max: line size].
in linesDo: [:line | out nextPutAll: (line forceTo: width paddingWith: $☆); cr].
out contents
</pre></div>
