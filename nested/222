  s.split(n).with{ it*.padRight(it*.size().max(), p[0]).join(n) + n }
}

print r = padRightAll(&#39;○○○○\n○○○○○○○\n\n○○○○○\n&#39;, &#39;☆&#39;)
assert r == &#39;○○○○☆☆☆\n○○○○○○○\n☆☆☆☆☆☆☆\n○○○○○☆☆\n&#39;
