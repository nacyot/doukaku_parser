<span class="kr">let</span> <span class="n">mkvar</span> <span class="k">()</span> <span class="k">=</span> <span class="k">(</span><span class="n">ref</span> <span class="n">None</span><span class="k">:&#39;</span><span class="n">a</span> <span class="n">t</span><span class="k">)</span>
<span class="kr">let</span> <span class="n">get</span> <span class="k">(</span><span class="n">x</span><span class="k">:&#39;</span><span class="n">a</span> <span class="n">t</span><span class="k">)</span> <span class="k">=</span> <span class="o">!</span><span class="n">x</span>
