<span class="gi">+++ center.pl   2007-11-17 05:17:39.000000000 +0900</span>
<span class="gu">@@ -8,8 +8,7 @@</span>
     my $margin = int(($width - length($str))/2);
     return $str if $margin == 0;
     return &quot; &quot; x int($margin) . $str if $margin &gt; 0;
<span class="gd">-    substr($str, 0, -$margin, &#39;&#39;);</span>
<span class="gd">-    return substr($str, 0, $width);</span>
<span class="gi">+    return substr($str, -$margin, $width);</span>
 }
