  <span class="k">for</span><span class="p">(</span><span class="k">var</span> <span class="nx">is</span> <span class="o">=</span> <span class="nx">i</span><span class="p">.</span><span class="nx">inputStream</span><span class="o">,</span> <span class="nx">os</span> <span class="o">=</span> <span class="nx">o</span><span class="p">.</span><span class="nx">outputStream</span><span class="o">,</span> <span class="nx">b</span><span class="o">;</span> <span class="p">(</span><span class="nx">b</span> <span class="o">=</span> <span class="nx">is</span><span class="p">.</span><span class="nx">read</span><span class="p">())</span> <span class="o">!=</span> <span class="o">-</span><span class="mi">1</span><span class="o">;</span> <span class="nx">os</span><span class="p">.</span><span class="nx">write</span><span class="p">(</span><span class="nx">b</span><span class="p">));</span>
