37</pre></td><td class="code"><div class="highlight"><pre><span class="c1">#!/usr/local/bin/perl</span>

<span class="k">use</span> <span class="n">strict</span><span class="p">;</span>
<span class="k">use</span> <span class="n">warnings</span><span class="p">;</span>

<span class="k">use</span> <span class="nn">IPC::</span><span class="n">Open2</span><span class="p">;</span>
<span class="k">use</span> <span class="n">POSIX</span> <span class="sx">qw( :sys_wait_h )</span><span class="p">;</span>
<span class="k">use</span> <span class="n">Fcntl</span> <span class="sx">qw( F_GETFL F_SETFL O_NONBLOCK )</span><span class="p">;</span>

<span class="k">my</span> <span class="p">(</span> <span class="nv">$fd_from_a</span><span class="p">,</span> <span class="nv">$fd_to_a</span><span class="p">,</span> <span class="nv">$fd_from_b</span><span class="p">,</span> <span class="nv">$fd_to_b</span> <span class="p">);</span>

<span class="nv">$SIG</span><span class="p">{</span><span class="n">CHLD</span><span class="p">}</span> <span class="o">=</span> <span class="o">\&amp;</span><span class="n">handler_SIGCHLD</span><span class="p">;</span>

<span class="k">my</span> <span class="nv">@pids</span><span class="p">;</span>

<span class="nb">push</span> <span class="nv">@pids</span><span class="p">,</span> <span class="n">open2</span><span class="p">(</span> <span class="nv">$fd_from_a</span><span class="p">,</span> <span class="nv">$fd_to_a</span><span class="p">,</span> <span class="s">&#39;/usr/pkg/sbin/nc -l -p 60001&#39;</span> <span class="p">);</span>
<span class="nb">push</span> <span class="nv">@pids</span><span class="p">,</span> <span class="n">open2</span><span class="p">(</span> <span class="nv">$fd_from_b</span><span class="p">,</span> <span class="nv">$fd_to_b</span><span class="p">,</span> <span class="s">&#39;/usr/pkg/sbin/nc -l -p 60002&#39;</span> <span class="p">);</span>

<span class="k">my</span> <span class="nv">$old_flags</span> <span class="o">=</span> <span class="nb">fcntl</span> <span class="nv">$fd_from_a</span><span class="p">,</span> <span class="n">F_GETFL</span><span class="p">,</span> <span class="mi">0</span><span class="p">;</span>
<span class="nb">fcntl</span> <span class="nv">$fd_from_a</span><span class="p">,</span> <span class="n">F_SETFL</span><span class="p">,</span> <span class="nv">$old_flags</span> <span class="o">|</span> <span class="n">O_NONBLOCK</span><span class="p">;</span>

<span class="nv">$old_flags</span> <span class="o">=</span> <span class="nb">fcntl</span> <span class="nv">$fd_from_b</span><span class="p">,</span> <span class="n">F_GETFL</span><span class="p">,</span> <span class="mi">0</span><span class="p">;</span>
<span class="nb">fcntl</span> <span class="nv">$fd_from_b</span><span class="p">,</span> <span class="n">F_SETFL</span><span class="p">,</span> <span class="nv">$old_flags</span> <span class="o">|</span> <span class="n">O_NONBLOCK</span><span class="p">;</span>

<span class="k">while</span><span class="p">(</span><span class="mi">1</span><span class="p">)</span> <span class="p">{</span>
        <span class="nb">sleep</span> <span class="mi">1</span><span class="p">;</span>
        <span class="k">print</span> <span class="nv">$fd_to_b</span> <span class="p">(</span> <span class="o">&lt;</span><span class="nv">$fd_from_a</span><span class="o">&gt;</span> <span class="p">);</span>
        <span class="k">print</span> <span class="nv">$fd_to_a</span> <span class="p">(</span> <span class="o">&lt;</span><span class="nv">$fd_from_b</span><span class="o">&gt;</span> <span class="p">);</span>
<span class="p">}</span>

<span class="nb">kill</span> <span class="mi">1</span><span class="p">,</span> <span class="nv">@pids</span><span class="p">;</span>

<span class="k">sub </span><span class="nf">handler_SIGCHLD</span>
<span class="p">{</span>
        <span class="nb">kill</span> <span class="mi">1</span><span class="p">,</span> <span class="nv">@pids</span><span class="p">;</span>
        <span class="nb">exit</span><span class="p">;</span>
<span class="p">}</span>
</pre></div>
</td></tr></table>
    </div>
	

  
