	<a href="/web/20081202154102/http://ja.doukaku.org/comment/2904/">#2904</a>(<script language="JavaScript">print_time(new Date("2007/09/04 12:55 GMT"));</script><noscript>2007/09/04 12:55 GMT</noscript>)
	
	
	
