object Utf16ToUtf8 {
  def toChars(octets:List[Long]):List[Long] = octets match {
      case List() =&gt; List()
      case h::hx =&gt; hx match {
          case l::lx =&gt; ((h &lt;&lt; 8 | l): @unchecked) match {
              case c if c &gt;= 0xD800 &amp;&amp; c &lt;= 0xDBFF =&gt; lx match {
                  case h::hx if h &gt;= 0xDc &amp;&amp; h &lt;= 0xDF =&gt; hx match {
                      case l::lx =&gt; (0x10000 + (c - 0xD800) * 0x400 + (h &lt;&lt; 8 | l) - 0xDC00)::toChars(lx)
                      case _ =&gt; throw new Exception(&quot;invalid data.&quot;)
                    }
                  case _ =&gt; throw new Exception(&quot;invalid data.&quot;)
                }
              case c =&gt; c::toChars(lx)
            }
          case _ =&gt; throw new Exception(&quot;invalid data.&quot;)
        }
      case _ =&gt; throw new Exception(&quot;invalid data.&quot;)
    }
  def convert(char:Long):List[Long] = {
    lazy val  converter:(Long,Int)=&gt;List[Long] = (l, d) =&gt; {
        if (d &gt; 6) throw new Exception(&quot;invalid data.&quot;)
        if (l &gt;&gt; (7 - d) == 0)
          List(JInteger.parseInt(&quot;1&quot; * d, 2) &lt;&lt; (8 - d) | l &amp; JInteger.parseInt(&quot;1&quot; * (7 - d), 2))
        else
          converter(l &gt;&gt; 6, d + 1) ++ List(l &amp; 0x3f | 0x80)
      }
    if (char &lt; 0x80) List(char) else converter(char, 1)
  }
  def main(args:Array[String]) =
    println(toChars(args.toList.map(JLong.parseLong(_,16))).flatMap(convert _).map(_.toBinaryString).map((o)=&gt;&quot;0&quot;*(8-o.length)+o).mkString(&quot; &quot;))
}
</pre></div>
</td></tr></table>
