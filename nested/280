<span class="p">(</span><span class="nf">use</span> <span class="nv">util</span><span class="o">.</span><span class="nv">list</span><span class="p">)</span>
<span class="p">(</span><span class="nf">use</span> <span class="nv">srfi-1</span><span class="p">)</span>

<span class="p">(</span><span class="k">define </span><span class="p">(</span><span class="nf">utf16-&gt;utf8</span> <span class="nv">utf16</span><span class="p">)</span>
  <span class="p">(</span><span class="nf">string-join</span>
    <span class="p">(</span><span class="nf">append-map</span> <span class="p">(</span><span class="k">lambda </span><span class="p">(</span><span class="nf">ucs</span><span class="p">)</span>
