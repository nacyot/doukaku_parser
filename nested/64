<span class="kr">import</span> <span class="n">System</span><span class="o">.</span><span class="n">Environment</span>
<span class="kr">import</span> <span class="n">System</span><span class="o">.</span><span class="n">IO</span>
<span class="kr">import</span> <span class="n">System</span><span class="o">.</span><span class="n">Timeout</span>

<span class="nv">main</span> <span class="o">::</span> <span class="n">IO</span> <span class="p">()</span>
<span class="nv">main</span> <span class="o">=</span> <span class="kr">do</span> <span class="p">{</span> <span class="nv">prog</span> <span class="o">&lt;-</span> <span class="nv">getProgName</span>
          <span class="p">;</span> <span class="nv">args</span> <span class="o">&lt;-</span> <span class="nv">getArgs</span>
          <span class="p">;</span> <span class="kr">case</span> <span class="nv">args</span> <span class="kr">of</span>
              <span class="nv">t</span><span class="o">:</span><span class="nv">str</span><span class="o">:</span><span class="kr">_</span> <span class="o">-&gt;</span> <span class="nv">loop</span> <span class="mi">3</span> <span class="p">(</span><span class="nv">inputChecker</span> <span class="p">(</span><span class="nv">read</span> <span class="nv">t</span><span class="p">)</span> <span class="nv">str</span><span class="p">)</span>
              <span class="kr">_</span>       <span class="o">-&gt;</span> <span class="nv">usage</span> <span class="nv">prog</span>
          <span class="p">}</span>

<span class="nv">loop</span> <span class="o">::</span> <span class="n">Int</span> <span class="o">-&gt;</span> <span class="n">IO</span> <span class="p">()</span> <span class="o">-&gt;</span> <span class="n">IO</span> <span class="p">()</span>
<span class="nv">loop</span> <span class="mi">0</span> <span class="kr">_</span> <span class="o">=</span> <span class="nv">return</span> <span class="p">()</span>
<span class="nv">loop</span> <span class="nv">n</span> <span class="nv">f</span> <span class="o">=</span> <span class="nv">f</span> <span class="o">&gt;&gt;</span> <span class="nv">loop</span> <span class="p">(</span><span class="nv">n</span><span class="o">-</span><span class="mi">1</span><span class="p">)</span> <span class="nv">f</span>

<span class="nv">usage</span> <span class="o">::</span> <span class="n">String</span> <span class="o">-&gt;</span> <span class="n">IO</span> <span class="p">()</span>
<span class="nv">usage</span> <span class="nv">prog</span> <span class="o">=</span> <span class="nv">hPutStrLn</span> <span class="nv">stderr</span> <span class="o">$</span> <span class="nv">prog</span> <span class="o">++</span> <span class="s">&quot; &lt;timeout&gt; &lt;string&gt;&quot;</span>

<span class="nv">inputChecker</span> <span class="o">::</span> <span class="n">Int</span> <span class="o">-&gt;</span> <span class="n">String</span> <span class="o">-&gt;</span> <span class="n">IO</span> <span class="p">()</span>
<span class="nv">inputChecker</span> <span class="nv">t</span> <span class="nv">s</span>
 <span class="o">=</span> <span class="kr">do</span> <span class="p">{</span> <span class="nv">hPutStr</span> <span class="nv">stderr</span> <span class="o">$</span> <span class="s">&quot;input(&quot;</span> <span class="o">++</span> <span class="nv">s</span> <span class="o">++</span> <span class="s">&quot;) =&gt; &quot;</span>
      <span class="p">;</span> <span class="nv">hSetBuffering</span> <span class="nv">stdin</span> <span class="n">NoBuffering</span>
      <span class="p">;</span> <span class="nv">c</span> <span class="o">&lt;-</span> <span class="nv">hGetChar</span> <span class="nv">stdin</span>
      <span class="p">;</span> <span class="nv">ms</span> <span class="o">&lt;-</span> <span class="nv">timeout</span> <span class="p">(</span><span class="nv">t</span><span class="o">*</span><span class="mi">1000000</span><span class="p">)</span> <span class="p">(</span><span class="nv">hGetLine</span> <span class="nv">stdin</span><span class="p">)</span>
      <span class="p">;</span> <span class="kr">case</span> <span class="nv">ms</span> <span class="kr">of</span>
          <span class="n">Nothing</span> <span class="o">-&gt;</span> <span class="nv">hPutStrLn</span> <span class="nv">stdout</span> <span class="s">&quot;\n result =&gt; TIME OUT&quot;</span> <span class="o">&gt;&gt;</span> <span class="nv">hFlush</span> <span class="nv">stdout</span>
          <span class="n">Just</span> <span class="nv">s&#39;</span> <span class="o">-&gt;</span> <span class="kr">if</span> <span class="nv">s</span> <span class="o">==</span> <span class="p">(</span><span class="nv">c</span><span class="o">:</span><span class="nv">s&#39;</span><span class="p">)</span> <span class="kr">then</span> <span class="nv">hPutStrLn</span> <span class="nv">stdout</span> <span class="s">&quot; result =&gt; OK&quot;</span> <span class="o">&gt;&gt;</span> <span class="nv">hFlush</span> <span class="nv">stdout</span>
                     <span class="kr">else</span> <span class="nv">hPutStrLn</span> <span class="nv">stdout</span> <span class="s">&quot; result =&gt; NG&quot;</span> <span class="o">&gt;&gt;</span> <span class="nv">hFlush</span> <span class="nv">stdout</span>
      <span class="p">}</span>

<span class="cm">{-</span>
<span class="cm">*Main&gt; :main 5 ABCDEF</span>
<span class="cm">input(ABCDEF) =&gt; ABCDEF</span>
<span class="cm"> result =&gt; OK</span>
<span class="cm">input(ABCDEF) =&gt; A</span>
<span class="cm"> result =&gt; TIME OUT</span>
<span class="cm">input(ABCDEF) =&gt; PQR</span>
<span class="cm"> result =&gt; NG</span>
<span class="cm">*Main&gt; _</span>
<span class="cm">-}</span>
</pre></div>
