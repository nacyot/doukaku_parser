showPrice()

def showPrice() {
    def ShowPriceData = new XmlParser().parse(new File(args[0]))
        print  &quot;「&quot;+ShowPriceData.goods[0].&#39;@ITEM_NAME&#39;+&quot;」は&quot;
        println  &quot;(&quot;+((ShowPriceData.goods[0].&#39;@ITEM_COST&#39;).toInteger()*1.05).toInteger()+&quot;)円&quot;
