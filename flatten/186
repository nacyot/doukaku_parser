    <span class="nb">printf</span><span class="p">(</span><span class="s">&#39;「%s」は%d円（税込み）&#39;</span><span class="p">,</span>
           <span class="nv">$cfg</span><span class="o">-&gt;</span><span class="n">param</span><span class="p">(</span><span class="s">&#39;ITEM_NAME&#39;</span><span class="p">),</span>
