   grails.webflow.stateless = true
   grails.webflow.stateless2 = true
   smtp {
       mail.host = &#39;smtp.myisp.com&#39;
       mail.auth.user = &#39;server&#39;
   }
   resources.URL = &quot;http://localhost:80/resources&quot;
&#39;&#39;&#39;
sw = new StringWriter()
new ConfigSlurper().parse(config).writeTo(sw)

println sw
</pre></div>
