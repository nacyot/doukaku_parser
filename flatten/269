<span class="k">class</span> <span class="nc">Setting</span><span class="p">:</span> <span class="k">pass</span>

<span class="n">setting</span> <span class="o">=</span> <span class="n">Setting</span><span class="p">()</span>
<span class="n">setting</span><span class="o">.</span><span class="n">message</span> <span class="o">=</span> <span class="s">&#39;Hello&#39;</span>
<span class="k">with</span> <span class="nb">open</span><span class="p">(</span><span class="s">r&#39;.setting&#39;</span><span class="p">,</span> <span class="s">&#39;w&#39;</span><span class="p">)</span> <span class="k">as</span> <span class="n">f</span><span class="p">:</span>
    <span class="n">pickle</span><span class="o">.</span><span class="n">dump</span><span class="p">(</span><span class="n">setting</span><span class="p">,</span> <span class="n">f</span><span class="p">)</span>

<span class="k">with</span> <span class="nb">open</span><span class="p">(</span><span class="s">&#39;.setting&#39;</span><span class="p">)</span> <span class="k">as</span> <span class="n">f</span><span class="p">:</span>
    <span class="n">s</span> <span class="o">=</span> <span class="n">pickle</span><span class="o">.</span><span class="n">load</span><span class="p">(</span><span class="n">f</span><span class="p">)</span>
    <span class="k">print</span> <span class="n">s</span><span class="o">.</span><span class="n">message</span>
