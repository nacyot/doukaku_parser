<span class="k">use</span> <span class="n">warnings</span><span class="p">;</span>

<span class="k">sub </span><span class="nf">center</span><span class="p">{</span>
    <span class="k">my</span> <span class="nv">$str</span> <span class="o">=</span> <span class="nb">shift</span><span class="p">;</span>
    <span class="k">my</span> <span class="nv">$width</span> <span class="o">=</span> <span class="nb">shift</span> <span class="o">||</span> <span class="mi">80</span><span class="p">;</span>
    <span class="k">my</span> <span class="nv">$margin</span> <span class="o">=</span> <span class="nb">int</span><span class="p">((</span><span class="nv">$width</span> <span class="o">-</span> <span class="nb">length</span><span class="p">(</span><span class="nv">$str</span><span class="p">))</span><span class="o">/</span><span class="mi">2</span><span class="p">);</span>
    <span class="k">return</span> <span class="nv">$str</span> <span class="k">if</span> <span class="nv">$margin</span> <span class="o">==</span> <span class="mi">0</span><span class="p">;</span>
    <span class="k">return</span> <span class="s">&quot; &quot;</span> <span class="n">x</span> <span class="nb">int</span><span class="p">(</span><span class="nv">$margin</span><span class="p">)</span> <span class="o">.</span> <span class="nv">$str</span> <span class="k">if</span> <span class="nv">$margin</span> <span class="o">&gt;</span> <span class="mi">0</span><span class="p">;</span>
