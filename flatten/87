                   <span class="nv">s1</span> <span class="o">=</span> <span class="nv">div</span> <span class="nv">s</span> <span class="mi">2</span>
                   <span class="nv">s2</span> <span class="o">=</span> <span class="nv">s</span> <span class="o">-</span> <span class="nv">s1</span>
               <span class="kr">in</span> <span class="nv">reverse</span><span class="o">.</span><span class="nv">format</span> <span class="nv">s2</span><span class="o">.</span><span class="nv">reverse</span><span class="o">.</span><span class="nv">format</span> <span class="nv">s1</span> <span class="o">$</span> <span class="nv">str</span>
  <span class="kr">where</span> <span class="nv">format</span> <span class="nv">n</span> 
