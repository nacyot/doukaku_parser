    <span class="kr">where</span> 
    <span class="nv">lmargin</span> <span class="o">=</span> <span class="p">(</span><span class="nv">width</span> <span class="o">-</span> <span class="nv">length</span> <span class="nv">str</span><span class="p">)</span> <span class="p">`</span><span class="nv">div</span><span class="p">`</span> <span class="mi">2</span>
