    <span class="n">width</span> <span class="o">||=</span> <span class="mi">80</span>
    <span class="n">margin</span> <span class="o">=</span> <span class="p">(</span><span class="n">width</span> <span class="o">-</span> <span class="nb">self</span><span class="o">.</span><span class="n">length</span><span class="p">)</span><span class="o">/</span><span class="mi">2</span><span class="p">;</span>
