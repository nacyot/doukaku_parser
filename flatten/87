<span class="k">static</span> <span class="k">class</span> <span class="nc">Program</span> <span class="k">{</span>
    <span class="k">static</span> <span class="k">void</span> <span class="nf">Main</span><span class="p">()</span> <span class="k">{</span>
        <span class="kt">string</span><span class="p">[]</span> <span class="n">texts</span> <span class="p">=</span> <span class="k">{</span>
            <span class="s">&quot;0123456789&quot;</span><span class="p">,</span>
            <span class="s">&quot;abc&quot;</span><span class="p">,</span>
            <span class="s">&quot;abcdefg&quot;</span><span class="p">,</span>
            <span class="s">&quot;abcdefghijklmn&quot;</span><span class="p">,</span>
        <span class="k">}</span><span class="p">;</span>
        <span class="k">foreach</span><span class="p">(</span><span class="kt">string</span> <span class="n">text</span> <span class="k">in</span> <span class="n">texts</span><span class="p">)</span> <span class="k">{</span>
            <span class="n">Console</span><span class="p">.</span><span class="n">WriteLine</span><span class="p">(</span><span class="n">Centering</span><span class="p">(</span><span class="n">text</span><span class="p">,</span> <span class="m">10</span><span class="p">));</span>
        <span class="k">}</span>
    <span class="k">}</span>
    <span class="k">static</span> <span class="kt">string</span> <span class="nf">Centering</span><span class="p">(</span><span class="kt">string</span> <span class="n">text</span><span class="p">,</span> <span class="kt">int</span> <span class="n">width</span><span class="p">)</span> <span class="k">{</span>
        <span class="kt">int</span> <span class="n">margin</span> <span class="p">=</span> <span class="p">(</span><span class="kt">int</span><span class="p">)((</span><span class="n">width</span> <span class="p">-</span> <span class="n">text</span><span class="p">.</span><span class="n">Length</span><span class="p">)</span> <span class="p">/</span> <span class="m">2</span><span class="p">);</span>
        <span class="k">if</span> <span class="p">(</span><span class="n">margin</span> <span class="p">==</span> <span class="m">0</span><span class="p">)</span>
            <span class="k">return</span> <span class="n">text</span><span class="p">;</span>
        <span class="k">if</span> <span class="p">(</span><span class="m">0</span> <span class="p">&lt;</span> <span class="n">margin</span><span class="p">)</span>
            <span class="k">return</span> <span class="n">text</span><span class="p">.</span><span class="n">PadLeft</span><span class="p">(</span><span class="n">margin</span> <span class="p">+</span> <span class="n">text</span><span class="p">.</span><span class="n">Length</span><span class="p">);</span>
        <span class="k">return</span> <span class="n">text</span><span class="p">.</span><span class="n">Substring</span><span class="p">(-</span><span class="n">margin</span><span class="p">,</span> <span class="n">width</span><span class="p">);</span>
    <span class="k">}</span>
<span class="k">}</span>
