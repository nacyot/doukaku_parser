    margin := (width - self size) / 2
    if (margin &lt; 0,
        self slice(-margin, self size + margin)
    ,
        self alignCenter(width)
    )
)


# なんか手元のだと定義されていないので
Number to := method(i,
    Range clone setRange(self, i)
)

0 to(7) foreach(i,
    &quot;proto&quot; asMutable centered(i) justSerialized
    &quot;&quot; println
)

/* output

&quot;&quot;
&quot;o&quot;
&quot;ro&quot;
&quot;rot&quot;
&quot;prot&quot;
&quot;proto&quot;
&quot;proto &quot;
&quot; proto &quot;

*/
</pre></div>
