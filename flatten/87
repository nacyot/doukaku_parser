    <span class="n">printf</span><span class="p">(</span><span class="s">&quot;|%s|</span><span class="se">\n</span><span class="s">&quot;</span><span class="p">,</span> <span class="n">centering</span><span class="p">(</span><span class="n">buff</span><span class="p">,</span> <span class="s">&quot;123456789&quot;</span><span class="p">,</span> <span class="mi">15</span><span class="p">));</span>
