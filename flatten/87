<span class="k">import</span> <span class="n">std</span>.<span class="n">string</span>;
<span class="k">import</span> <span class="n">std</span>.<span class="n">utf</span>;

<span class="n">string</span> <span class="n">cropCenter</span>(<span class="n">string</span> <span class="n">str</span>, <span class="kt">uint</span> <span class="n">width</span>){
    <span class="k">auto</span> <span class="n">wstr</span> = <span class="n">toUTF16</span>(<span class="n">str</span>);
    <span class="kt">int</span> <span class="n">leftMargin</span> = <span class="k">cast</span>(<span class="kt">int</span>)(<span class="n">width</span> - <span class="n">wstr</span>.<span class="n">length</span>) / <span class="mi">2</span>;
    <span class="kt">int</span> <span class="n">rightMargin</span> = <span class="k">cast</span>(<span class="kt">int</span>)(<span class="n">width</span> - <span class="n">wstr</span>.<span class="n">length</span>) - <span class="n">leftMargin</span>;
    <span class="k">return</span> (<span class="n">rightMargin</span> &lt; <span class="mi">0</span>) ?
           <span class="n">toUTF8</span>(<span class="n">wstr</span>[-<span class="n">leftMargin</span>..($ + <span class="n">rightMargin</span>)]) :
           (<span class="n">repeat</span>(<span class="s">&quot; &quot;</span>, <span class="n">leftMargin</span>) ~ <span class="n">str</span> ~ <span class="n">repeat</span>(<span class="s">&quot; &quot;</span>, <span class="n">rightMargin</span>));
}

<span class="kt">void</span> <span class="n">main</span>(){
    <span class="n">writefln</span>(<span class="n">cropCenter</span>(<span class="s">&quot;ほげら&quot;</span>, <span class="mi">2</span>));  <span class="c">//=&gt; &quot;ほげ&quot;</span>
    <span class="n">writefln</span>(<span class="n">cropCenter</span>(<span class="s">&quot;ほげら&quot;</span>, <span class="mi">1</span>));  <span class="c">//=&gt; &quot;げ&quot;</span>
    <span class="n">writefln</span>(<span class="n">cropCenter</span>(<span class="s">&quot;ほげ&quot;</span>,   <span class="mi">2</span>));  <span class="c">//=&gt; &quot;ほげ&quot;</span>
    <span class="n">writefln</span>(<span class="n">cropCenter</span>(<span class="s">&quot;ほげ&quot;</span>,   <span class="mi">1</span>));  <span class="c">//=&gt; &quot;ほ&quot;</span>
    <span class="n">writefln</span>(<span class="n">cropCenter</span>(<span class="s">&quot;ほげら&quot;</span>, <span class="mi">5</span>));  <span class="c">//=&gt; &quot; ほげら &quot;</span>
    <span class="n">writefln</span>(<span class="n">cropCenter</span>(<span class="s">&quot;ほげら&quot;</span>, <span class="mi">4</span>));  <span class="c">//=&gt; &quot;ほげら &quot;</span>
    <span class="n">writefln</span>(<span class="n">cropCenter</span>(<span class="s">&quot;ほげ&quot;</span>,   <span class="mi">5</span>));  <span class="c">//=&gt; &quot; ほげ  &quot;</span>
    <span class="n">writefln</span>(<span class="n">cropCenter</span>(<span class="s">&quot;ほげ&quot;</span>,   <span class="mi">4</span>));  <span class="c">//=&gt; &quot; ほげ &quot;</span>
}
</pre></div>
