16
17</pre></td><td class="code"><div class="highlight"><pre><span class="c">#!/bin/sh</span>
usage<span class="o">(){</span> <span class="nb">echo</span> <span class="s2">&quot;usage: $(basename $0) source dest filename...&quot;</span> &gt;&amp;2; <span class="nb">exit </span>1; <span class="o">}</span>

<span class="o">[</span> <span class="nv">$# </span>-lt <span class="m">3</span> <span class="o">]</span> &amp;&amp; usage
<span class="nv">src</span><span class="o">=</span><span class="nv">$1</span>
<span class="nv">dst</span><span class="o">=</span><span class="nv">$2</span>
<span class="nv">ptn</span><span class="o">=</span><span class="s2">&quot;-name $3&quot;</span>
<span class="nb">shift </span>3
<span class="k">for </span>f in <span class="s2">&quot;$@&quot;</span>; <span class="k">do </span><span class="nv">ptn</span><span class="o">=</span><span class="s2">&quot;$ptn -o -name $f&quot;</span>; <span class="k">done</span>

<span class="nv">files</span><span class="o">=</span><span class="k">$(</span><span class="nb">cd</span> <span class="s2">&quot;$src&quot;</span>; find -type f <span class="nv">$ptn</span><span class="k">)</span>
<span class="o">[</span> -z <span class="s2">&quot;$files&quot;</span> <span class="o">]</span> &amp;&amp; usage

rm -rf <span class="s2">&quot;$dst&quot;</span>
mkdir <span class="s2">&quot;$dst&quot;</span> || usage

tar cf - -C <span class="s2">&quot;$src&quot;</span> <span class="nv">$files</span> | tar xf - -C <span class="s2">&quot;$dst&quot;</span>
</pre></div>
</td></tr></table>
    </div>
	

  
