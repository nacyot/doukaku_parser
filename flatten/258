<span class="kt">int</span> <span class="n">main</span>()
{
    <span class="n">FILE</span>* <span class="n">fp</span> = <span class="n">fopen</span>(<span class="s">&quot;hoge.txt&quot;</span>, <span class="s">&quot;w&quot;</span>);
    <span class="k">scope</span>(<span class="n">exit</span>) <span class="n">fclose</span>(<span class="n">fp</span>);
    <span class="n">fputs</span>(<span class="s">&quot;hello, world&quot;</span>, <span class="n">fp</span>);
    <span class="k">return</span> <span class="mi">0</span>;
}
</pre></div>
</td></tr></table>
    </div>
	

  
