    <span class="n">last</span><span class="o">=</span><span class="n">time</span><span class="p">(</span><span class="nb">NULL</span><span class="p">);</span>
    <span class="k">do</span><span class="p">{</span>
        <span class="k">if</span><span class="p">(</span><span class="n">kbhit</span><span class="p">()){</span>
