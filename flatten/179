<span class="cp">#define STATE_RUN  0</span>
<span class="cp">#define STATE_WAIT 1</span>
<span class="cp">#define STATE_QUIT 2</span>


<span class="kt">int</span> <span class="n">main</span><span class="p">(){</span>
    <span class="n">time_t</span> <span class="n">now</span><span class="p">,</span><span class="n">last</span><span class="p">;</span>
    <span class="kt">int</span> <span class="n">c</span><span class="p">;</span>
