<span class="nv">weaveIO</span> <span class="nv">w</span> <span class="nv">m</span> <span class="nv">f</span> <span class="o">=</span> <span class="kr">do</span>
    <span class="nv">a</span> <span class="o">&lt;-</span> <span class="nv">m</span> 
    <span class="nv">b</span> <span class="o">&lt;-</span> <span class="nv">w</span>
    <span class="kr">if</span> <span class="nv">b</span> <span class="kr">then</span> <span class="nv">f</span> <span class="nv">a</span>
        <span class="kr">else</span> <span class="nv">return</span> <span class="nv">a</span>

<span class="nv">getChar&#39;</span> <span class="o">::</span> <span class="n">IO</span> <span class="n">Char</span>
<span class="nv">getChar&#39;</span> <span class="o">=</span> <span class="nv">getLine</span> <span class="o">&gt;&gt;=</span> <span class="nv">return</span><span class="o">.</span><span class="nv">head</span><span class="o">.</span><span class="p">(</span><span class="o">++</span><span class="s">&quot; &quot;</span><span class="p">)</span>

<span class="nv">nonBlockingGetCh</span> <span class="o">::</span> <span class="n">IO</span> <span class="p">(</span><span class="n">Maybe</span> <span class="n">Char</span><span class="p">)</span>
