-export([start/0,puta/1]).

start()-&gt;
    P  = spawn(intter,puta,&quot;a&quot;),
    loop(P).

loop(P) -&gt;
    case io:get_chars(&#39;&#39;,1) of
        &quot;q&quot; -&gt;
            halt();
        I -&gt;
            P ! I,
            loop(P)
    end.

puta(Status)-&gt;
    receive
        &quot;p&quot; -&gt;
            case Status of
                &quot;p&quot; -&gt;
                    io:format(&quot;a&quot;),
                    puta(&quot;a&quot;);
                _ -&gt;
                    puta(&quot;p&quot;)
            end
    after 1000 -&gt;
            case Status of
                &quot;p&quot;-&gt;
                    ok;
                _ -&gt;
                    io:format(&quot;a&quot;)
            end,
            puta(Status)
    end.
