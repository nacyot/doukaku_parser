<span class="n">pause</span> <span class="o">=</span> <span class="kp">false</span>
<span class="n">can_toggle_pause</span> <span class="o">=</span> <span class="kp">true</span>

<span class="no">Thread</span><span class="o">.</span><span class="n">start</span> <span class="p">{</span>
  <span class="kp">loop</span> <span class="p">{</span>
    <span class="k">unless</span> <span class="n">pause</span>
      <span class="nb">print</span> <span class="s1">&#39;a&#39;</span>
      <span class="nb">sleep</span> <span class="mi">1</span>
    <span class="k">else</span>
      <span class="nb">sleep</span> <span class="mi">0</span><span class="o">.</span><span class="mi">1</span>
    <span class="k">end</span>
  <span class="p">}</span>
<span class="p">}</span>

<span class="kp">loop</span> <span class="p">{</span>
  <span class="n">key_state</span> <span class="o">=</span> <span class="p">{</span><span class="ss">:p</span> <span class="o">=&gt;</span> <span class="p">(</span><span class="no">GetKeyState</span><span class="o">.</span><span class="n">call</span><span class="p">(</span><span class="sc">?P</span><span class="p">)</span><span class="o">[</span><span class="mi">7</span><span class="o">]</span> <span class="o">==</span> <span class="mi">1</span><span class="p">),</span>
               <span class="ss">:q</span> <span class="o">=&gt;</span> <span class="p">(</span><span class="no">GetKeyState</span><span class="o">.</span><span class="n">call</span><span class="p">(</span><span class="sc">?Q</span><span class="p">)</span><span class="o">[</span><span class="mi">7</span><span class="o">]</span> <span class="o">==</span> <span class="mi">1</span><span class="p">)</span>
  <span class="p">}</span>
  <span class="nb">exit</span> <span class="k">if</span> <span class="n">key_state</span><span class="o">[</span><span class="ss">:q</span><span class="o">]</span>
  <span class="k">if</span> <span class="n">key_state</span><span class="o">[</span><span class="ss">:p</span><span class="o">]</span>
    <span class="k">if</span> <span class="n">can_toggle_pause</span>
      <span class="n">pause</span> <span class="o">=</span> <span class="o">!</span><span class="n">pause</span>
      <span class="n">can_toggle_pause</span> <span class="o">=</span> <span class="kp">false</span>
    <span class="k">end</span>
  <span class="k">else</span>
    <span class="n">can_toggle_pause</span> <span class="o">=</span> <span class="kp">true</span>
  <span class="k">end</span>
  <span class="nb">sleep</span> <span class="mi">0</span><span class="o">.</span><span class="mo">05</span>
<span class="p">}</span>
</pre></div>
</td></tr></table>
