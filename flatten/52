<span class="sd">&gt;&gt;&gt; pyramid(&quot;hoge&quot;)</span>
<span class="sd">   e</span>
<span class="sd">  g e</span>
<span class="sd"> o g e</span>
<span class="sd">h o g e</span>

<span class="sd">&gt;&gt;&gt; pyramid(&quot;abracadabra&quot;)</span>
<span class="sd">          a</span>
<span class="sd">         r a</span>
<span class="sd">        b r a</span>
<span class="sd">       a b r a</span>
<span class="sd">      d a b r a</span>
<span class="sd">     a d a b r a</span>
<span class="sd">    c a d a b r a</span>
<span class="sd">   a c a d a b r a</span>
<span class="sd">  r a c a d a b r a</span>
<span class="sd"> b r a c a d a b r a</span>
<span class="sd">a b r a c a d a b r a</span>
<span class="sd">&quot;&quot;&quot;</span>
<span class="k">def</span> <span class="nf">pyramid</span><span class="p">(</span><span class="n">s</span><span class="p">,</span> <span class="n">padding</span><span class="o">=</span><span class="bp">None</span><span class="p">):</span>
  <span class="k">assert</span><span class="p">(</span><span class="nb">len</span><span class="p">(</span><span class="n">s</span><span class="p">)</span> <span class="o">&gt;</span> <span class="mi">0</span><span class="p">)</span>
  <span class="k">if</span> <span class="n">padding</span> <span class="ow">is</span> <span class="bp">None</span><span class="p">:</span>
    <span class="n">padding</span> <span class="o">=</span> <span class="s">&#39; &#39;</span>
  <span class="k">if</span> <span class="nb">len</span><span class="p">(</span><span class="n">s</span><span class="p">)</span> <span class="o">==</span> <span class="mi">1</span><span class="p">:</span>
    <span class="k">return</span> <span class="n">s</span><span class="p">[</span><span class="mi">0</span><span class="p">]</span>
  <span class="k">else</span><span class="p">:</span>
    <span class="n">p</span> <span class="o">=</span> <span class="n">pyramid</span><span class="p">(</span><span class="n">s</span><span class="p">[</span><span class="mi">1</span><span class="p">:],</span> <span class="n">padding</span> <span class="o">+</span> <span class="s">&#39; &#39;</span><span class="p">)</span>
    <span class="k">print</span> <span class="n">padding</span> <span class="o">+</span> <span class="n">p</span>
    <span class="k">if</span> <span class="n">padding</span> <span class="o">==</span> <span class="s">&#39; &#39;</span><span class="p">:</span>
      <span class="k">print</span> <span class="n">s</span><span class="p">[</span><span class="mi">0</span><span class="p">]</span> <span class="o">+</span> <span class="s">&#39; &#39;</span> <span class="o">+</span> <span class="n">p</span>
    <span class="k">else</span><span class="p">:</span>
      <span class="k">return</span> <span class="n">s</span><span class="p">[</span><span class="mi">0</span><span class="p">]</span> <span class="o">+</span> <span class="s">&#39; &#39;</span> <span class="o">+</span> <span class="n">p</span>

<span class="k">import</span> <span class="nn">doctest</span>
