<span class="cp">#include &lt;algorithm&gt;</span>

<span class="kt">void</span> <span class="n">pyramid</span><span class="p">(</span><span class="k">const</span> <span class="n">std</span><span class="o">::</span><span class="n">string</span><span class="o">&amp;</span> <span class="n">s</span><span class="p">)</span>
