<span class="kt">bool</span> <span class="n">isLeadChar</span><span class="p">(</span><span class="n">std</span><span class="o">::</span><span class="n">string</span><span class="o">::</span><span class="n">value_type</span> <span class="n">c</span><span class="p">)</span>
<span class="p">{</span>
    <span class="kt">unsigned</span> <span class="kt">char</span> <span class="n">uc</span> <span class="o">=</span> <span class="n">c</span><span class="p">;</span>
    <span class="k">return</span> <span class="p">((</span><span class="mh">0x80</span><span class="n">u</span> <span class="o">&lt;=</span> <span class="n">uc</span><span class="p">)</span> <span class="o">&amp;&amp;</span> <span class="p">(</span><span class="n">uc</span> <span class="o">&lt;=</span> <span class="mh">0x9f</span><span class="n">u</span><span class="p">))</span> <span class="o">||</span> <span class="p">((</span><span class="mh">0xa1</span><span class="n">u</span> <span class="o">&lt;=</span> <span class="n">uc</span><span class="p">)</span> <span class="o">&amp;&amp;</span> <span class="p">(</span><span class="n">uc</span> <span class="o">&lt;=</span> <span class="mh">0xfe</span><span class="n">u</span><span class="p">));</span>
