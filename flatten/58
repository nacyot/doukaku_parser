<span class="k">@interface</span> <span class="nc">NSString</span> <span class="nl">(Re</span><span class="n">verse</span><span class="p">)</span>
<span class="o">-</span> <span class="p">(</span><span class="n">NSString</span> <span class="o">*</span><span class="p">)</span><span class="n">reversedString</span><span class="p">;</span>
