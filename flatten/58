<span class="k">@implementation</span> <span class="nc">NSString</span> <span class="nl">(Re</span><span class="n">verse</span><span class="p">)</span>
<span class="o">-</span> <span class="p">(</span><span class="n">NSString</span> <span class="o">*</span><span class="p">)</span><span class="n">reversedString</span>
<span class="p">{</span>
    <span class="k">if</span> <span class="p">([</span><span class="n">self</span> <span class="n">length</span><span class="p">]</span> <span class="o">&gt;</span> <span class="mi">1</span><span class="p">)</span>
    <span class="p">{</span>
        <span class="k">return</span> <span class="p">[[[</span><span class="n">self</span> <span class="nl">substringFromIndex:</span><span class="mi">1</span><span class="p">]</span> <span class="n">reversedString</span><span class="p">]</span> <span class="nl">stringByAppendingString:</span><span class="p">[</span><span class="n">self</span> <span class="nl">substringToIndex:</span><span class="mi">1</span><span class="p">]];</span>
    <span class="p">}</span>
    <span class="k">else</span>
    <span class="p">{</span>
        <span class="k">return</span> <span class="n">self</span><span class="p">;</span>
    <span class="p">}</span>
<span class="p">}</span>
