16</pre></td><td class="code"><div class="highlight"><pre>    call reverse_string &quot;Hello&quot;;
    message $$return;
    call reverse_string &quot;こんにちは&quot;;
    message $$return;
    call reverse_string &quot;濁点(だくてん)&quot;;
    message $$return;
    endmacro;

reverse_string:
    $$result = &quot;&quot;;
    while( $$1 != &quot;&quot; ) {
        $$char = unichar( unicode( $$1 ) );
        $$result = $$char + $$result;
        $$1 = rightstr( $$1, strlen( $$1 ) - strlen( $$char ) );
    }
    return $$result;
</pre></div>
</td></tr></table>
