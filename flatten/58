        <span class="c">/* Shift-JISか判定 */</span>
        <span class="k">if</span> <span class="p">((</span><span class="n">in</span><span class="p">[</span><span class="n">i</span><span class="p">]</span> <span class="o">&gt;=</span> <span class="mh">0x80</span> <span class="o">&amp;&amp;</span> <span class="n">in</span><span class="p">[</span><span class="n">i</span><span class="p">]</span> <span class="o">&lt;=</span> <span class="mh">0x9F</span><span class="p">)</span> <span class="o">||</span>
