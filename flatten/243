    WScript.Quit(1)
End If
inFileName = WScript.Arguments(0)

Set fs = CreateObject(&quot;Scripting.FileSystemObject&quot;)

If fs.FileExists(inFileName) Then
    Set objFile = fs.GetFile(inFileName)
    WScript.Echo &quot;FileSize = &quot; &amp; objFile.Size
End If
</pre></div>
