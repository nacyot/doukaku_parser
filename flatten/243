14
15
16</pre></td><td class="code"><div class="highlight"><pre>import java.io.File

object FileSize {
    def main(args:Array[String]):Unit = {
        args.size match {
            case 1 =&gt; {
                var    f = new File(args.first)
                f.exists match {
                    case true =&gt; printf(&quot;%s bytes\n&quot;, f.length)
                    case _ =&gt; println(&quot;file not exist.&quot;)
                }
            }
            case _ =&gt; println(&quot;usage: scala FileSize FILENAME&quot;)
        }
    }
}
</pre></div>
</td></tr></table>
