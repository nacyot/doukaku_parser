27
28
29</pre></td><td class="code"><div class="highlight"><pre><span class="k">program</span> <span class="n">doukaku243</span><span class="o">;</span>

<span class="k">uses</span>
  <span class="n">SysUtils</span><span class="o">;</span>

<span class="k">function</span> <span class="nf">GetFileSize</span><span class="p">(</span><span class="k">const</span> <span class="n">Filename</span><span class="o">:</span> <span class="k">String</span><span class="p">)</span><span class="o">:</span> <span class="kt">Integer</span><span class="o">;</span>
<span class="k">var</span>
  <span class="n">rec</span><span class="o">:</span> <span class="n">TSearchRec</span><span class="o">;</span>
<span class="k">begin</span>
  <span class="k">if</span> <span class="nb">FindFirst</span><span class="p">(</span><span class="n">Filename</span><span class="o">,</span> <span class="n">faAnyFile</span><span class="o">,</span> <span class="n">rec</span><span class="p">)</span> <span class="o">=</span> <span class="mi">0</span> <span class="k">then</span>
    <span class="bp">result</span> <span class="o">:=</span> <span class="n">rec</span><span class="o">.</span><span class="n">Size</span>
  <span class="k">else</span>
    <span class="bp">result</span> <span class="o">:=</span> <span class="o">-</span><span class="mi">1</span><span class="o">;</span>
  <span class="nb">FindClose</span><span class="p">(</span><span class="n">rec</span><span class="p">)</span><span class="o">;</span>
<span class="k">end</span><span class="o">;</span>

<span class="k">var</span>
  <span class="n">i</span><span class="o">,</span> <span class="n">Size</span><span class="o">:</span> <span class="kt">Integer</span><span class="o">;</span>
<span class="k">begin</span>
  <span class="k">for</span> <span class="n">i</span> <span class="o">:=</span> <span class="mi">1</span> <span class="k">to</span> <span class="nb">ParamCount</span> <span class="k">do</span>
  <span class="k">begin</span>
    <span class="nb">Write</span><span class="p">(</span><span class="nb">ParamStr</span><span class="p">(</span><span class="n">i</span><span class="p">)</span><span class="o">,</span> <span class="s">&#39; &#39;</span><span class="p">)</span><span class="o">;</span>
    <span class="n">Size</span> <span class="o">:=</span> <span class="n">GetFileSize</span><span class="p">(</span><span class="nb">ParamStr</span><span class="p">(</span><span class="n">i</span><span class="p">))</span><span class="o">;</span>
    <span class="k">if</span> <span class="n">Size</span> <span class="o">&gt;=</span> <span class="mi">0</span> <span class="k">then</span>
      <span class="nb">Writeln</span><span class="p">(</span><span class="n">Size</span><span class="o">,</span> <span class="s">&#39; byte(s)&#39;</span><span class="p">)</span>
    <span class="k">else</span>
      <span class="nb">Writeln</span><span class="p">(</span><span class="s">&#39;not found&#39;</span><span class="p">)</span><span class="o">;</span>
  <span class="k">end</span><span class="o">;</span>
<span class="k">end</span><span class="o">.</span>
</pre></div>
