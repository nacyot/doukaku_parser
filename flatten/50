1 0 obj
&lt;&lt;
 /Type /Page
 /Parent 5 0 R
 /Resources 3 0 R
 /Contents 2 0 R
&gt;&gt;
endobj

2 0 obj
&lt;&lt; /Length 53 &gt;&gt;
stream
BT
/F1 90 Tf
1 0 0 1 10 600 Tm
(Hello, World!) Tj
ET
endstream
endobj

3 0 obj
&lt;&lt;
 /ProcSet [ /PDF /Text ]
 /Font &lt;&lt; /F1 4 0 R &gt;&gt;
&gt;&gt;
endobj

4 0 obj
&lt;&lt;
 /Type /Font
 /Subtype /Type1
 /Name /Helv
 /BaseFont /Helvetica
&gt;&gt;
endobj

5 0 obj
&lt;&lt;
 /Type /Pages
 /Kids [ 1 0 R ]
 /Count 1
 /MediaBox [ 0 0 595 842 ]
&gt;&gt;
endobj

6 0 obj
&lt;&lt;
 /Type /Catalog
 /Pages 5 0 R
&gt;&gt;
endobj

trailer
&lt;&lt; /Root 6 0 R &gt;&gt;

%%EOF
</pre></div>
