17</pre></td><td class="code"><div class="highlight"><pre><span class="nb">require</span> <span class="s1">&#39;cairo&#39;</span>

<span class="n">width</span><span class="p">,</span> <span class="n">height</span> <span class="o">=</span> <span class="mi">291</span><span class="p">,</span> <span class="mi">210</span>
<span class="n">text</span> <span class="o">=</span> <span class="s2">&quot;Hello, world!&quot;</span>

<span class="no">Cairo</span><span class="o">::</span><span class="no">PDFSurface</span><span class="o">.</span><span class="n">new</span><span class="p">(</span><span class="s2">&quot;hello.pdf&quot;</span><span class="p">,</span> <span class="n">width</span><span class="p">,</span> <span class="n">height</span><span class="p">)</span> <span class="k">do</span> <span class="o">|</span><span class="n">surface</span><span class="o">|</span>
  <span class="n">cr</span> <span class="o">=</span> <span class="no">Cairo</span><span class="o">::</span><span class="no">Context</span><span class="o">.</span><span class="n">new</span><span class="p">(</span><span class="n">surface</span><span class="p">)</span>
  <span class="n">font_size</span> <span class="o">=</span> <span class="n">cr</span><span class="o">.</span><span class="n">save</span> <span class="p">{</span>
    <span class="n">cr</span><span class="o">.</span><span class="n">set_font_size</span><span class="p">(</span><span class="mi">100</span><span class="o">.</span><span class="mi">0</span><span class="p">)</span>
    <span class="n">width</span> <span class="o">/</span> <span class="n">cr</span><span class="o">.</span><span class="n">text_extents</span><span class="p">(</span><span class="n">text</span><span class="p">)</span><span class="o">.</span><span class="n">x_advance</span> <span class="o">*</span> <span class="mi">100</span><span class="o">.</span><span class="mi">0</span>
  <span class="p">}</span>

  <span class="n">cr</span><span class="o">.</span><span class="n">set_font_size</span><span class="p">(</span><span class="n">font_size</span><span class="p">)</span>
  <span class="n">cr</span><span class="o">.</span><span class="n">move_to</span><span class="p">(</span><span class="mi">0</span><span class="p">,</span> <span class="n">height</span> <span class="o">/</span> <span class="mi">2</span><span class="p">)</span>
  <span class="n">cr</span><span class="o">.</span><span class="n">show_text</span><span class="p">(</span><span class="n">text</span><span class="p">)</span>
