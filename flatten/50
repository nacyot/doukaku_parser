18</pre></td><td class="code"><div class="highlight"><pre><span class="cp">#include &lt;stdio.h&gt;</span>
<span class="cp">#include &lt;stdlib.h&gt;</span>
<span class="cp">#include &lt;panda/functions.h&gt;</span>
<span class="cp">#include &lt;panda/constants.h&gt;</span>

<span class="kt">int</span> <span class="nf">main</span><span class="p">(</span><span class="kt">int</span> <span class="n">argc</span><span class="p">,</span> <span class="kt">char</span> <span class="o">*</span><span class="n">argv</span><span class="p">[])</span>
<span class="p">{</span>
    <span class="n">panda_pdf</span> <span class="o">*</span><span class="n">pdf</span><span class="p">;</span>
    <span class="n">panda_page</span> <span class="o">*</span><span class="n">page</span><span class="p">;</span>
    <span class="n">panda_init</span><span class="p">();</span>
    <span class="n">pdf</span> <span class="o">=</span> <span class="n">panda_open</span> <span class="p">(</span><span class="s">&quot;hello.pdf&quot;</span><span class="p">,</span> <span class="s">&quot;w&quot;</span><span class="p">);</span>
    <span class="k">if</span><span class="p">(</span><span class="o">!</span><span class="n">pdf</span><span class="p">)</span> <span class="n">panda_error</span><span class="p">(</span><span class="n">panda_true</span><span class="p">,</span> <span class="s">&quot;error&quot;</span><span class="p">);</span>
    <span class="n">page</span> <span class="o">=</span> <span class="n">panda_newpage</span><span class="p">(</span><span class="n">pdf</span><span class="p">,</span> <span class="n">panda_pagesize_a4</span><span class="p">);</span>
    <span class="n">panda_setfontsize</span><span class="p">(</span><span class="n">pdf</span><span class="p">,</span> <span class="mi">72</span><span class="p">);</span>
    <span class="n">panda_textbox</span><span class="p">(</span><span class="n">pdf</span><span class="p">,</span> <span class="n">page</span><span class="p">,</span> <span class="mi">10</span><span class="p">,</span> <span class="mi">10</span><span class="p">,</span> <span class="mi">100</span><span class="p">,</span> <span class="mi">500</span><span class="p">,</span> <span class="s">&quot;Hello World!&quot;</span><span class="p">);</span>
    <span class="n">panda_close</span><span class="p">(</span><span class="n">pdf</span><span class="p">);</span>
    <span class="k">return</span> <span class="n">EXIT_SUCCESS</span><span class="p">;</span>
<span class="p">}</span>
</pre></div>
