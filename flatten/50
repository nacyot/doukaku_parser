-export([start/0]).

start()-&gt;
    PDF = pdf:new(),
    pdf:set_pagesize(PDF, 841, 595),
    pdf:begin_text(PDF),
    pdf:set_font(PDF, &quot;Times-Italic&quot;, 148),
    pdf:set_text_pos(PDF, 12, 280),
    pdf:text(PDF, &quot;Hello, World!&quot;),
    pdf:end_text(PDF),
    file:write_file(&quot;helloworld.pdf&quot;,[pdf:export(PDF)]),
    pdf:delete(PDF).
</pre></div>
</td></tr></table>
