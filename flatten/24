<span class="nv">template</span> <span class="o">=</span> <span class="n">U</span><span class="o">.</span><span class="nv">toUTF8</span> <span class="o">$</span> <span class="nv">unlines</span> 
 <span class="p">[</span><span class="s">&quot;From: [[from]]&quot;</span>
 <span class="p">,</span><span class="s">&quot;To: [[to]]&quot;</span>
 <span class="p">,</span><span class="s">&quot;Subject: [[name]]さんにメッセージが届いています。&quot;</span>
 <span class="p">,</span><span class="s">&quot;&quot;</span>
 <span class="p">,</span><span class="s">&quot;[[name]]さんに[[fromname]]さんからメッセージが届いてます。&quot;</span>
 <span class="p">,</span><span class="s">&quot;以下のURLからアクセスできます。&quot;</span>
 <span class="p">,</span><span class="s">&quot;[[url]]&quot;</span>
 <span class="p">]</span>

<span class="nv">bindings</span> <span class="o">=</span> <span class="p">[(</span><span class="s">&quot;from&quot;</span><span class="p">,</span><span class="s">&quot;from@example.org&quot;</span><span class="p">)</span>
	   <span class="p">,(</span><span class="s">&quot;to&quot;</span><span class="p">,</span> <span class="s">&quot;to@example.org&quot;</span><span class="p">)</span>
	   <span class="p">,(</span><span class="s">&quot;name&quot;</span><span class="p">,</span><span class="n">U</span><span class="o">.</span><span class="nv">toUTF8</span> <span class="s">&quot;どうかく&quot;</span><span class="p">)</span>
	   <span class="p">,(</span><span class="s">&quot;fromname&quot;</span><span class="p">,</span><span class="n">U</span><span class="o">.</span><span class="nv">toUTF8</span> <span class="s">&quot;管理者&quot;</span><span class="p">)</span>
           <span class="p">,(</span><span class="s">&quot;url&quot;</span><span class="p">,</span><span class="s">&quot;http://ja.dokuaku.org/&quot;</span><span class="p">)</span>
	   <span class="p">]</span>
<span class="c1">------------------------------------------------------------------------</span>

<span class="nv">main</span> <span class="o">::</span> <span class="n">IO</span> <span class="p">()</span>
<span class="nv">main</span> <span class="o">=</span> <span class="kr">case</span> <span class="nv">rawmsg</span> <span class="nv">template</span> <span class="nv">bindings</span> <span class="kr">of</span>
 <span class="n">RawMessage</span> <span class="nv">hs</span> <span class="nv">ls</span>
  <span class="o">-&gt;</span> <span class="nv">putStr</span> <span class="o">$</span> <span class="nv">unlines</span> 
   <span class="o">$</span> <span class="nv">map</span> <span class="nv">showHeader</span> <span class="p">(</span><span class="nv">encSubject</span> <span class="nv">hs</span><span class="o">++</span><span class="nv">hdrs</span><span class="p">)</span> <span class="o">++</span> <span class="p">[</span><span class="s">&quot;&quot;</span><span class="p">]</span> <span class="o">++</span> <span class="nv">map</span> <span class="nv">convert&#39;</span> <span class="nv">ls</span>

<span class="c1">------------------------------------------------------------------------</span>

<span class="nv">rawmsg</span> <span class="nv">template</span> <span class="nv">bindings</span>
 <span class="o">=</span> <span class="kr">case</span> <span class="nv">parseMessageFromString</span> <span class="o">$</span> <span class="nv">insertItems</span> <span class="nv">template</span> <span class="nv">bindings</span> <span class="kr">of</span>
     <span class="n">Left</span> <span class="nv">e</span> <span class="o">-&gt;</span> <span class="nv">error</span> <span class="o">$</span> <span class="nv">show</span> <span class="nv">e</span>
     <span class="n">Right</span> <span class="nv">rm</span> <span class="o">-&gt;</span> <span class="nv">rm</span> 

<span class="nv">insertItems</span> <span class="o">=</span> <span class="nv">foldl</span> <span class="p">(</span><span class="o">\</span> <span class="nv">t</span> <span class="p">(</span><span class="nv">n</span><span class="p">,</span><span class="nv">v</span><span class="p">)</span> <span class="o">-&gt;</span> <span class="nv">subRegex</span> <span class="p">(</span><span class="nv">mkRegex</span> <span class="p">(</span><span class="s">&quot;\\[\\[&quot;</span><span class="o">++</span><span class="nv">n</span><span class="o">++</span><span class="s">&quot;\\]\\]&quot;</span><span class="p">))</span> <span class="nv">t</span> <span class="nv">v</span><span class="p">)</span>

<span class="nv">encSubject</span> <span class="nv">hs</span> <span class="o">=</span> <span class="kr">case</span> <span class="nv">break</span> <span class="nv">subjectHeader</span> <span class="nv">hs</span> <span class="kr">of</span> 
  <span class="p">(</span><span class="nv">xs</span><span class="p">,(</span><span class="n">Header</span> <span class="p">(</span><span class="kr">_</span><span class="p">,</span><span class="nv">v</span><span class="p">))</span><span class="o">:</span><span class="nv">ys</span><span class="p">)</span> <span class="o">-&gt;</span> <span class="nv">xs</span><span class="o">++</span><span class="nv">makeSubject</span> <span class="p">(</span><span class="nv">encodeValue</span> <span class="nv">v</span><span class="p">)</span> <span class="o">:</span> <span class="nv">ys</span>

<span class="nv">subjectHeader</span> <span class="p">(</span><span class="n">Header</span> <span class="nv">h</span><span class="p">)</span> <span class="o">=</span> <span class="nv">map</span> <span class="nv">toLower</span> <span class="p">(</span><span class="nv">fst</span> <span class="nv">h</span><span class="p">)</span> <span class="o">==</span> <span class="s">&quot;subject&quot;</span>

<span class="nv">encodeValue</span> <span class="o">::</span> <span class="n">String</span> <span class="o">-&gt;</span> <span class="n">String</span>
<span class="nv">encodeValue</span> <span class="o">=</span> <span class="nv">printf</span> <span class="s">&quot;=?ISO-2022-JP?B?%s?=&quot;</span> <span class="o">.</span> <span class="nv">encode&#39;</span> <span class="o">.</span> <span class="nv">convert&#39;</span>

<span class="nv">convert&#39;</span> <span class="nv">s</span> <span class="o">=</span> <span class="kr">case</span> <span class="nv">convert</span> <span class="n">Strict</span> <span class="s">&quot;UTF-8&quot;</span> <span class="s">&quot;ISO-2022-JP&quot;</span> <span class="nv">s</span> <span class="kr">of</span>
  <span class="n">ConversionSuccess</span> <span class="nv">s&#39;</span> <span class="o">-&gt;</span> <span class="nv">s&#39;</span>
