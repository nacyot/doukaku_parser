83</pre></td><td class="code"><div class="highlight"><pre>mail.create &lt;- function(templatefile, datafile, mailfile){
    # parse data
    d    &lt;- read.table(datafile)
    data &lt;- as.list(as.vector(d[,2]))
    names(data) &lt;- d[,1]

    # replace variables
    mail &lt;- sub(&quot;^&lt;ef&gt;&lt;bb&gt;&lt;bf&gt;&quot;, &quot;&quot;, readLines(templatefile, encoding=&quot;UTF-8&quot;))
    mail &lt;- gsub(&quot;\\[\\[from\\]\\]&quot;,     data$from, mail)
    mail &lt;- gsub(&quot;\\[\\[to\\]\\]&quot;,       data$to, mail)
    mail &lt;- gsub(&quot;\\[\\[name\\]\\]&quot;,     data$name, mail)
    mail &lt;- gsub(&quot;\\[\\[fromname\\]\\]&quot;, data$fromname, mail)
    mail &lt;- gsub(&quot;\\[\\[url\\]\\]&quot;,      data$url, mail)

    # making mail header
    mail.sep    &lt;- which(mail == &quot;&quot;)[1]
    mail.header &lt;- mail[1:(mail.sep-1)]
    mail.body   &lt;- mail[(mail.sep+1):length(mail)]
    sub &lt;- grep(&quot;^Subject:&quot;, mail.header)
    mail.header &lt;- c(mail.header[-sub], MIME.Base64(mail.header[sub]))
    if(all((regexpr(&quot;^Date:&quot;, mail.header)==-1))){
        mail.header &lt;- c(mail.header, paste(&quot;Date:&quot;, getDate()))
    }
    if(all((regexpr(&quot;^Message-ID:&quot;, mail.header)==-1))){
        mail.header &lt;- c(mail.header, paste(&quot;Message-ID:&quot;, getMessageID(data$from)))
    }
    mail.header &lt;- c(mail.header, &#39;MIME-Version: 1.0&#39;)
    mail.header &lt;- c(mail.header, &#39;Content-Type: text/plain; charset=&quot;ISO-2022-JP&quot;&#39;)
    mail.header &lt;- c(mail.header, &#39;Content-Transfer-Encoding: 7bit&#39;)
    
    # concatenate to file
    cat(c(mail.header, &quot;&quot;, mail.body), file=file(mailfile, &quot;w&quot;, encoding=&quot;ISO-2022-JP&quot;), sep=&quot;\n&quot;)
}

# Date: (cf. RFC 2822)
getDate &lt;- function(){
    lct &lt;- Sys.getlocale(&quot;LC_TIME&quot;)
    Sys.setlocale(&quot;LC_TIME&quot;, &quot;C&quot;)
    datastr &lt;- format(Sys.time(), &quot;%a, %d %b %Y %H:%M:%S +900&quot;, tz=&quot;JST-9&quot;)
    Sys.setlocale(&quot;LC_TIME&quot;, lct)
    return(datastr)
}

# Message-ID: timestamp and random number (without hashing)
getMessageID &lt;- function(address){
    lp &lt;- paste(format(Sys.time(), &quot;%Y%m%d%H%M%S&quot;), runif(1), sep=&quot;&quot;)
    dp &lt;- sub(&quot;&gt;&quot;, &quot;&quot;, sub(&quot;.+@(.+)&quot;, &quot;\\1&quot;, address))
    return(paste(lp, &quot;@&quot;, dp, sep=&quot;&quot;))
}

# MIME-Base64 (converting to ISO-2022-JP)
MIME.Base64 &lt;- function(str){
    i &lt;- regexpr(&quot;[^ -~]&quot;, str, perl=TRUE) # find non-ascii index
    if(i == -1) return(str)
    len  &lt;- 76-17-i
    enc  &lt;- toBase64(iconv(substr(str, i, nchar(str)), from=&quot;SJIS&quot;, to=&quot;ISO-2022-JP&quot;))
    enc2 &lt;- unlist(strsplit(enc, &quot;&quot;))
    enc2 &lt;- c(enc2, rep(&quot;&quot;, (len - length(enc2))%%len))
    sub  &lt;- apply(matrix(enc2, len), 2, function(a){paste(c(&quot;=?ISO-2022-JP?B?&quot;, a, &quot;?=&quot;), collapse=&quot;&quot;)})
    sub[1] &lt;- paste(substr(str, 1, i-1), sub[1], sep=&quot;&quot;)
    return(sub)
}

# Base64 encoding (cf. RFC 3548)
Base64.table &lt;- c(LETTERS, letters, unlist(strsplit(&quot;0123456789+/&quot;, &quot;&quot;)))
toBase64 &lt;- function(str){
    r   &lt;- charToRaw(str)
    pad &lt;- (3 - length(r))%%3
    r1  &lt;- c(r, as.raw(rep(0, pad)))
    m   &lt;- matrix(r1, 3, length(r1)/3)
    b64 &lt;- as.vector(apply(m, 2, toBase64.each8bit))
    if(pad == 2) b64[length(b64)-1] = &quot;=&quot;
    if(pad == 2 || pad == 1) b64[length(b64)] = &quot;=&quot;
    return(paste(b64, collapse=&quot;&quot;))
}
toBase64.each8bit &lt;- function(m){
    b1 &lt;- as.vector(sapply(m, function(a){rev(rawToBits(a))}))
    b2 &lt;- rbind(matrix(as.raw(0), 2,4), matrix(b1, 6, 4))
    return(apply(b2, 2, toBase64.each6bit))
}
toBase64.each6bit &lt;- function(b){
    return(Base64.table[as.integer(packBits(rev(b)))+1])
}
</pre></div>
</td></tr></table>
