81
82
83
84</pre></td><td class="code"><div class="highlight"><pre>(defpackage :doukaku (:use :cl :net.post-office) (:export #:main))
(in-package :doukaku)

(defun encode-subject (string)
  (let* ((array (excl:string-to-octets string :external-format :jis))
	 (text  (excl:usb8-array-to-base64-string array)))
    (format nil &quot;=?ISO-2022-JP?B?~A?=&quot; text)))

(defun make-date ()
  (multiple-value-bind (second minute hour date month year day daylight-p zone)
      (get-decoded-time)
    (declare (ignore daylight-p))
    (format nil &quot;~A, ~2,&#39;0D ~A ~4,&#39;0D ~2,&#39;0D:~2,&#39;0D:~2,&#39;0D +~2,&#39;0D00&quot;
	    (elt #(&quot;Sun&quot; &quot;Mon&quot; &quot;Tue&quot; &quot;Wed&quot; &quot;Thr&quot; &quot;Fri&quot; &quot;Sat&quot;) day)
	    date
	    (elt #(&quot;Jan&quot; &quot;Feb&quot; &quot;Mar&quot; &quot;Apr&quot; &quot;May&quot; &quot;Jun&quot; &quot;Jul&quot; &quot;Aug&quot; &quot;Sep&quot; &quot;Oct&quot; &quot;Nov&quot; &quot;Dec&quot;) (1- month))
	    year
	    hour minute second (abs zone))))

(defun make-message-id ()
  (format nil &quot;&lt;~A.~A.~A@~A&gt;&quot;
	  (excl.osi:getpid) (get-universal-time)
	  (get-internal-run-time) (excl.osi:gethostname)))

(defun read-data-file (name)
  (with-open-file (s name :direction :input)
    (loop for line = (read-line s nil :eof)
	  until (eql line :eof)
	  for (match? result) = (multiple-value-list
				 (ppcre:scan-to-strings &quot;(\\w+)\\s*=&gt;\\s*&#39;(.*)&#39;,&quot; line))
	  when match? collect (cons (elt result 0) (elt result 1)))))

(defun fill-template (datafile template)
  (let* ((data (read-data-file datafile))
	 (text (with-open-file (s template :direction :input)
		 (let* ((buf (make-string (file-length s)))
			(size (read-sequence buf s)))
		   (subseq buf 0 size)))))
    (loop for (key . value) in data
	  for regex = (format nil &quot;\\[\\[~A\\]\\]&quot; key)
	  do (setf text
		   (ppcre:regex-replace-all regex text value))
	  finally (return text))))

(defun parse (document)
  (with-input-from-string (s document)
    (loop with state = :header
	  with header = ()
	  with body = ()
	  for line = (read-line s nil :eof)
	  until (eql line :eof)
	  do (cond ((and (eql state :header) (string= line &quot;&quot;))
		    (setf state :body))
		   ((eql state :header)
		    (multiple-value-bind (match? result)
			(ppcre:scan-to-strings &quot;(\\w+):\\s*(.*)&quot; line)
		      (when match?
			(when (string= (elt result 0) &quot;Subject&quot;)
			  (setf (elt result 1) (encode-subject (elt result 1))))
			(push (cons (elt result 0) (elt result 1)) header))))
		   ((eql state :body)
		    (push line body)
		    (push #(#\Newline) body)))
	  finally (return `(:header ,(reverse header)
			    :body   ,(apply #&#39;concatenate
					    (cons &#39;string (reverse body))))))))

(defun main ()
  (let* ((doc (parse (fill-template &quot;data.txt&quot; &quot;template.txt&quot;)))
	 (header (getf doc :header))
	 (body   (getf doc :body))
	 (mime   (make-mime-part :headers `(,@header
					    (&quot;Date&quot; . ,(make-date))
					    (&quot;Message-ID&quot; . ,(make-message-id)))
				 :charset &quot;ISO-2022-JP&quot;
				 :text    body
				 :external-format :jis)))
    (with-open-file (s &quot;mail.txt&quot; :direction :output :if-exists :supersede)
      (mime-part-writer mime :stream s))
    (with-open-file (s &quot;mail.txt&quot; :direction :input :external-format :jis)
      (loop for line = (read-line s nil :eof)
	    until (eql line :eof)
	    do (write-line line)))
    mime))
</pre></div>
</td></tr></table>
    </div>
	

  
