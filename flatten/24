<span class="p">[</span><span class="n">Sendmail</span><span class="p">]</span>
<span class="n">method</span> <span class="o">=</span> <span class="n">smtp</span>
<span class="n">host</span> <span class="o">=</span> <span class="n">mikage</span><span class="o">.</span><span class="n">to</span>

<span class="o">----</span> <span class="n">mailsend</span><span class="o">.</span><span class="n">pl</span>

<span class="c1">#!/usr/local/ymir/perl/bin/perl</span>

<span class="k">use</span> <span class="n">Tripletail</span> <span class="sx">qw(mail.ini)</span><span class="p">;</span>

<span class="k">my</span> <span class="nv">$t</span> <span class="o">=</span> <span class="nv">$TL</span><span class="o">-&gt;</span><span class="n">newTemplate</span><span class="p">(</span><span class="s">&quot;mail.txt&quot;</span><span class="p">)</span>
        <span class="o">-&gt;</span><span class="n">expand</span><span class="p">({</span>
          <span class="n">from</span> <span class="o">=&gt;</span> <span class="s">&#39;from@example.org&#39;</span><span class="p">,</span>
          <span class="n">to</span> <span class="o">=&gt;</span> <span class="s">&#39;to@example.org&#39;</span><span class="p">,</span>
          <span class="n">name</span> <span class="o">=&gt;</span> <span class="s">&#39;どう書く&#39;</span><span class="p">,</span>
          <span class="n">fromname</span> <span class="o">=&gt;</span> <span class="s">&#39;管理者&#39;</span><span class="p">,</span>
          <span class="n">url</span> <span class="o">=&gt;</span> <span class="s">&#39;http://ja.doukaku.org/&#39;</span><span class="p">,</span>
        <span class="p">});</span>

<span class="k">my</span> <span class="nv">$mail</span> <span class="o">=</span> <span class="nv">$TL</span><span class="o">-&gt;</span><span class="n">newMail</span><span class="o">-&gt;</span><span class="n">set</span><span class="p">(</span><span class="nv">$t</span><span class="o">-&gt;</span><span class="n">toStr</span><span class="p">)</span><span class="o">-&gt;</span><span class="n">toStr</span><span class="p">;</span>

<span class="nv">$TL</span><span class="o">-&gt;</span><span class="n">newSendmail</span><span class="o">-&gt;</span><span class="nb">connect</span>
        <span class="o">-&gt;</span><span class="nb">send</span><span class="p">(</span>
