        <span class="p">});</span>

<span class="k">print</span> <span class="nv">$TL</span><span class="o">-&gt;</span><span class="n">newMail</span><span class="o">-&gt;</span><span class="n">set</span><span class="p">(</span><span class="nv">$t</span><span class="o">-&gt;</span><span class="n">toStr</span><span class="p">)</span><span class="o">-&gt;</span><span class="n">toStr</span><span class="p">;</span>
