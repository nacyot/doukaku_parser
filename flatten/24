<span class="k">use</span> <span class="n">Tripletail</span> <span class="sx">qw(/dev/null)</span><span class="p">;</span>

<span class="k">my</span> <span class="nv">$t</span> <span class="o">=</span> <span class="nv">$TL</span><span class="o">-&gt;</span><span class="n">newTemplate</span><span class="p">(</span><span class="s">&quot;mail.txt&quot;</span><span class="p">)</span>
