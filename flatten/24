<span class="k">use</span> <span class="n">warnings</span><span class="p">;</span>

<span class="k">use</span> <span class="n">Template</span><span class="p">;</span>
<span class="k">use</span> <span class="nn">MIME::</span><span class="n">Lite</span><span class="p">;</span>
<span class="k">use</span> <span class="nn">HTTP::</span><span class="n">Date</span><span class="p">;</span>
<span class="k">use</span> <span class="n">Encode</span><span class="p">;</span>

<span class="k">my</span> <span class="nv">$param</span> <span class="o">=</span> <span class="p">{</span>
             <span class="n">from</span> <span class="o">=&gt;</span> <span class="s">&#39;from@example.jp&#39;</span><span class="p">,</span>
             <span class="n">to</span> <span class="o">=&gt;</span> <span class="s">&#39;to@example.jp&#39;</span><span class="p">,</span>
             <span class="n">name</span> <span class="o">=&gt;</span> <span class="s">&#39;受信者&#39;</span><span class="p">,</span>
             <span class="n">fromname</span> <span class="o">=&gt;</span> <span class="s">&#39;送信者&#39;</span><span class="p">,</span>
             <span class="n">url</span> <span class="o">=&gt;</span> <span class="s">&#39;http://example.jp/&#39;</span><span class="p">,</span>
             <span class="n">subject</span> <span class="o">=&gt;</span> <span class="s">&#39;[% name %]さんにメッセージが届いています。&#39;</span><span class="p">,</span>
             <span class="n">data</span> <span class="o">=&gt;</span> <span class="k">do</span> <span class="p">{</span> <span class="nb">local</span> <span class="vg">$/</span><span class="p">;</span> <span class="o">&lt;</span><span class="n">DATA</span><span class="o">&gt;</span> <span class="p">},</span>
             <span class="n">tz</span> <span class="o">=&gt;</span> <span class="o">+</span><span class="mi">9</span><span class="p">,</span>
            <span class="p">};</span>

<span class="c1">### template                                                                                                        </span>
<span class="k">my</span> <span class="nv">$tt</span> <span class="o">=</span> <span class="n">Template</span><span class="o">-&gt;</span><span class="k">new</span><span class="p">()</span> <span class="ow">or</span> <span class="nb">die</span> <span class="nv">$</span><span class="nn">Template::</span><span class="nv">ERROR</span><span class="p">;</span>
<span class="k">for</span> <span class="k">my</span> <span class="nv">$key</span> <span class="p">(</span> <span class="nb">keys</span> <span class="nv">%$param</span> <span class="p">)</span> <span class="p">{</span>
    <span class="k">my</span> <span class="nv">$depo</span><span class="p">;</span>
    <span class="nv">$tt</span><span class="o">-&gt;</span><span class="n">process</span><span class="p">(</span><span class="o">\</span><span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="nv">$key</span><span class="p">},</span> <span class="nv">$param</span><span class="p">,</span> <span class="o">\</span><span class="nv">$depo</span><span class="p">)</span> <span class="ow">or</span> <span class="nb">die</span> <span class="nv">$tt</span><span class="o">-&gt;</span><span class="n">error</span><span class="p">();</span>
    <span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="nv">$key</span><span class="p">}</span> <span class="o">=</span> <span class="nv">$depo</span><span class="p">;</span>
<span class="p">}</span>

<span class="c1">### utf-8 -&gt; iso-2022-jp                                                                                            </span>
<span class="k">for</span> <span class="k">my</span> <span class="nv">$key</span> <span class="p">(</span> <span class="nb">keys</span> <span class="nv">%$param</span> <span class="p">)</span> <span class="p">{</span>
    <span class="k">next</span> <span class="k">if</span> <span class="nv">$key</span> <span class="ow">eq</span> <span class="s">&#39;subject&#39;</span><span class="p">;</span>
    <span class="nn">Encode::</span><span class="n">from_to</span><span class="p">(</span><span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="nv">$key</span><span class="p">},</span><span class="s">&#39;utf-8&#39;</span><span class="p">,</span> <span class="s">&#39;7bit-jis&#39;</span><span class="p">);</span>
<span class="p">}</span>
<span class="c1">### MIME Encode                                                                                                     </span>
<span class="nn">Encode::</span><span class="n">decode</span><span class="p">(</span><span class="s">&#39;utf-8&#39;</span><span class="p">,</span> <span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">subject</span><span class="p">});</span>
<span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">subject</span><span class="p">}</span> <span class="o">=</span> <span class="n">encode</span><span class="p">(</span><span class="s">&#39;MIME-Header-ISO_2022_JP&#39;</span> <span class="o">=&gt;</span> <span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">subject</span><span class="p">});</span>

<span class="c1">### date                                                                                                            </span>
<span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">date</span><span class="p">}</span> <span class="o">=</span> <span class="nn">HTTP::Date::</span><span class="n">time2str</span><span class="p">(</span><span class="nb">time</span> <span class="o">+</span><span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">tz</span><span class="p">}</span><span class="o">*</span><span class="mi">3600</span><span class="p">);</span>
<span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">date</span><span class="p">}</span> <span class="o">=~</span> <span class="sr">s/GMT/sprintf(&quot;%+03d00&quot;, $param-&gt;{tz})/e</span><span class="p">;</span>

<span class="c1">### mail                                        </span>
<span class="k">my</span> <span class="nv">$msg</span> <span class="o">=</span> <span class="nn">MIME::</span><span class="n">Lite</span><span class="o">-&gt;</span><span class="k">new</span><span class="p">(</span>
                          <span class="n">From</span> <span class="o">=&gt;</span> <span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">from</span><span class="p">},</span>
                          <span class="n">To</span> <span class="o">=&gt;</span> <span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">to</span><span class="p">},</span>
                          <span class="n">Subject</span> <span class="o">=&gt;</span> <span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">subject</span><span class="p">},</span>
                          <span class="n">Type</span> <span class="o">=&gt;</span> <span class="s">&#39;text/plain; charset=ISO-2022-JP&#39;</span><span class="p">,</span>
                          <span class="n">Encoding</span> <span class="o">=&gt;</span> <span class="s">&#39;7bit&#39;</span><span class="p">,</span>
                          <span class="n">Data</span> <span class="o">=&gt;</span> <span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">data</span><span class="p">},</span>
                          <span class="n">Datestamp</span> <span class="o">=&gt;</span> <span class="mi">0</span><span class="p">,</span>
                          <span class="n">Date</span> <span class="o">=&gt;</span> <span class="nv">$param</span><span class="o">-&gt;</span><span class="p">{</span><span class="n">date</span><span class="p">},</span>
                         <span class="p">);</span>
<span class="nv">$msg</span><span class="o">-&gt;</span><span class="n">replace</span><span class="p">(</span><span class="s">&#39;X-Mailer&#39;</span> <span class="o">=&gt;</span> <span class="s">&#39;ja.doukaku.org/24&#39;</span><span class="p">);</span>
<span class="c1">#$msg-&gt;send();                                                                                                      </span>
<span class="k">print</span> <span class="nv">$msg</span><span class="o">-&gt;</span><span class="n">as_string</span><span class="p">;</span>

<span class="cp">__END__</span>
<span class="cp">[% name %]さんに[% fromname %]さんからメッセージが届いています。</span>
<span class="cp">以下のURLからアクセスできます。</span>
<span class="cp">[% url %]</span>
</pre></div>
</td></tr></table>
    </div>
	

  
  <div align = "right" class="banner">
	
