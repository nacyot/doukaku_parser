        <span class="o">-</span><span class="n">rcpt</span> <span class="o">=&gt;</span> <span class="s">&#39;mikage@mikage.to&#39;</span><span class="p">,</span>
        <span class="o">-</span><span class="n">data</span> <span class="o">=&gt;</span> <span class="nv">$mail</span><span class="p">)</span>
        <span class="o">-&gt;</span><span class="n">disconnect</span><span class="p">;</span>
