    <span class="k">private</span> <span class="k">static</span> <span class="kt">int</span> <span class="n">minStep</span> <span class="o">=</span> <span class="n">Integer</span><span class="o">.</span><span class="na">MAX_VALUE</span><span class="o">;</span>
    <span class="k">public</span> <span class="k">static</span> <span class="kt">void</span> <span class="n">move</span><span class="o">(</span><span class="kt">int</span> <span class="n">dest</span><span class="o">,</span> <span class="kt">int</span> <span class="n">step</span><span class="o">)</span> <span class="o">{</span>
        <span class="kt">boolean</span> <span class="n">so</span> <span class="o">=</span> <span class="n">dFlag</span><span class="o">[</span><span class="n">dest</span><span class="o">];</span>
        <span class="k">try</span> <span class="o">{</span>
            <span class="n">volume</span><span class="o">[</span><span class="n">dest</span><span class="o">]</span> <span class="o">+=</span> <span class="mi">2</span><span class="o">;</span>
