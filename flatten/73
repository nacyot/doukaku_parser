            <span class="n">dFlag</span><span class="o">[</span><span class="n">dest</span><span class="o">]</span> <span class="o">=</span> <span class="kc">true</span><span class="o">;</span>
            <span class="kt">int</span> <span class="n">emptyCount</span> <span class="o">=</span> <span class="mi">0</span><span class="o">;</span>
