<span class="kt">void</span> <span class="n">put_water_move</span><span class="p">(</span><span class="kt">long</span> <span class="n">a</span><span class="p">,</span><span class="kt">long</span> <span class="n">b</span><span class="p">,</span> <span class="kt">long</span> <span class="n">c</span><span class="p">){</span>
