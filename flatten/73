<span class="gi">+    if( *(*(baket[0])) &lt; *(*(baket[1])) ){ BAKET_SWAP(*(baket[0]), *(baket[1])); is_changed = 1;}</span>
<span class="gi">+    if( *(*(baket[1])) &lt; *(*(baket[2])) ){ BAKET_SWAP(*(baket[1]), *(baket[2])); is_changed = 1;}</span>
   }
 }
 
<span class="gu">@@ -37,7 +37,7 @@</span>
     }
     if( B == C )
     {
<span class="gd">-      printf(&quot;のこるのは B\n&quot;);</span>
<span class="gi">+      printf(&quot;のこるのは A\n&quot;);</span>
       count += B;
       break;
     }
</pre></div>
</td></tr></table>
