        <span class="n">SimpleUniverse</span> <span class="n">universe</span> <span class="o">=</span> <span class="k">new</span> <span class="n">SimpleUniverse</span><span class="o">(</span><span class="n">canvas</span><span class="o">);</span>
        <span class="n">universe</span><span class="o">.</span><span class="na">getViewingPlatform</span><span class="o">().</span><span class="na">setNominalViewingTransform</span><span class="o">();</span>
        <span class="n">universe</span><span class="o">.</span><span class="na">addBranchGraph</span><span class="o">(</span><span class="n">scene</span><span class="o">);</span>
    <span class="o">}</span>

    <span class="k">public</span> <span class="k">static</span> <span class="kt">void</span> <span class="n">main</span><span class="o">(</span><span class="n">String</span><span class="o">[]</span> <span class="n">args</span><span class="o">)</span> <span class="o">{</span>
        <span class="n">Sample3D</span> <span class="n">sample</span> <span class="o">=</span> <span class="k">new</span> <span class="n">Sample3D</span><span class="o">();</span>

        <span class="n">sample</span><span class="o">.</span><span class="na">setBounds</span><span class="o">(</span><span class="mi">10</span><span class="o">,</span> <span class="mi">10</span><span class="o">,</span> <span class="mi">480</span><span class="o">,</span> <span class="mi">480</span><span class="o">);</span>
