        <span class="n">objRoot</span><span class="o">.</span><span class="na">addChild</span><span class="o">(</span><span class="n">objTrans</span><span class="o">);</span>

        <span class="n">Transform3D</span> <span class="n">axis</span> <span class="o">=</span> <span class="k">new</span> <span class="n">Transform3D</span><span class="o">();</span>
        <span class="n">axis</span><span class="o">.</span><span class="na">rotZ</span><span class="o">(</span><span class="n">Math</span><span class="o">.</span><span class="na">PI</span> <span class="o">/</span> <span class="mi">2</span><span class="o">);</span>
        <span class="n">BoundingSphere</span> <span class="n">bounds</span> <span class="o">=</span> <span class="k">new</span> <span class="n">BoundingSphere</span><span class="o">(</span><span class="k">new</span> <span class="n">Point3d</span><span class="o">(),</span> <span class="mf">100.0</span><span class="o">);</span>
        <span class="n">RotationInterpolator</span> <span class="n">rotator</span> <span class="o">=</span> <span class="k">new</span> <span class="n">RotationInterpolator</span><span class="o">(</span><span class="k">new</span> <span class="n">Alpha</span><span class="o">(-</span><span class="mi">1</span><span class="o">,</span>
                <span class="mi">20</span> <span class="o">*</span> <span class="mi">4000</span><span class="o">),</span> <span class="n">objTrans</span><span class="o">,</span> <span class="n">axis</span><span class="o">,</span> <span class="mf">0.0f</span><span class="o">,</span> <span class="o">(</span><span class="kt">float</span><span class="o">)</span> <span class="n">Math</span><span class="o">.</span><span class="na">PI</span> <span class="o">*</span> <span class="mf">2.0f</span><span class="o">);</span>
