<span class="k">public</span> <span class="k">class</span> <span class="nc">Sample3D</span> <span class="k">extends</span> <span class="n">JFrame</span> <span class="o">{</span>
    <span class="k">public</span> <span class="n">BranchGroup</span> <span class="n">createSceneGraph</span><span class="o">()</span> <span class="o">{</span>
        <span class="n">BranchGroup</span> <span class="n">objRoot</span> <span class="o">=</span> <span class="k">new</span> <span class="n">BranchGroup</span><span class="o">();</span>

        <span class="n">TransformGroup</span> <span class="n">objTrans</span> <span class="o">=</span> <span class="k">new</span> <span class="n">TransformGroup</span><span class="o">();</span>
