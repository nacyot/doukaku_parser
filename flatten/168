        <span class="n">objRoot</span><span class="o">.</span><span class="na">addChild</span><span class="o">(</span><span class="n">rotator</span><span class="o">);</span>

        <span class="n">TransformGroup</span> <span class="n">objTrans2</span> <span class="o">=</span> <span class="k">new</span> <span class="n">TransformGroup</span><span class="o">();</span>
        <span class="n">objTrans2</span><span class="o">.</span><span class="na">setCapability</span><span class="o">(</span><span class="n">TransformGroup</span><span class="o">.</span><span class="na">ALLOW_TRANSFORM_WRITE</span><span class="o">);</span>
        <span class="n">objTrans</span><span class="o">.</span><span class="na">addChild</span><span class="o">(</span><span class="n">objTrans2</span><span class="o">);</span>
        <span class="n">rotator</span> <span class="o">=</span> <span class="k">new</span> <span class="n">RotationInterpolator</span><span class="o">(</span><span class="k">new</span> <span class="n">Alpha</span><span class="o">(-</span><span class="mi">1</span><span class="o">,</span> <span class="mi">4000</span><span class="o">),</span> <span class="n">objTrans2</span><span class="o">);</span>
