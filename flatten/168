        <span class="n">objRoot</span><span class="o">.</span><span class="na">addChild</span><span class="o">(</span><span class="n">rotator</span><span class="o">);</span>

        <span class="n">objTrans2</span><span class="o">.</span><span class="na">addChild</span><span class="o">(</span><span class="k">new</span> <span class="n">ColorCube</span><span class="o">(</span><span class="mf">0.4</span><span class="o">));</span>
        <span class="n">objRoot</span><span class="o">.</span><span class="na">compile</span><span class="o">();</span>
        <span class="k">return</span> <span class="n">objRoot</span><span class="o">;</span>
    <span class="o">}</span>

    <span class="k">public</span> <span class="n">Sample3D</span><span class="o">()</span> <span class="o">{</span>
        <span class="n">getContentPane</span><span class="o">().</span><span class="na">setLayout</span><span class="o">(</span><span class="k">new</span> <span class="n">BorderLayout</span><span class="o">());</span>
        <span class="n">GraphicsConfiguration</span> <span class="n">config</span> <span class="o">=</span> <span class="n">SimpleUniverse</span><span class="o">.</span><span class="na">getPreferredConfiguration</span><span class="o">();</span>
        <span class="n">Canvas3D</span> <span class="n">canvas</span> <span class="o">=</span> <span class="k">new</span> <span class="n">Canvas3D</span><span class="o">(</span><span class="n">config</span><span class="o">);</span>
        <span class="n">getContentPane</span><span class="o">().</span><span class="na">add</span><span class="o">(</span><span class="n">canvas</span><span class="o">,</span> <span class="n">BorderLayout</span><span class="o">.</span><span class="na">CENTER</span><span class="o">);</span>
