12</pre></td><td class="code"><div class="highlight"><pre>import java.text.*
import java.util.*

def outputDate = { date, formatter, timeZoneName, timeZone=null -&gt;
    if(timeZone) formatter.timeZone = TimeZone.getTimeZone(timeZone)
    println &quot;${timeZoneName}は、${formatter.format(date)}です。&quot; 
}

def outputNow = outputDate.curry(new Date(), new SimpleDateFormat(&quot;yyyy年MM月dd日 HH時mm分ss秒&quot;)); 
outputNow(&quot;現在の時刻&quot;)
outputNow(&quot;グリニッジ標準時刻&quot;,&quot;GMT&quot;) 
outputNow(&quot;アメリカ・ロサンゼルスの時刻&quot;,&quot;America/Los_Angeles&quot;)
</pre></div>
